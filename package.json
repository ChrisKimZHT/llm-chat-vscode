{
  "name": "llm-chat",
  "displayName": "llm-chat",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chatContainer",
          "title": "LLM Chat",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "chatContainer": [
        {
          "type": "webview",
          "id": "chatView",
          "name": "Chat Panel",
          "icon": "icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "LLM Chat Provider Settings",
      "properties": {
        "llmChat.baseURL": {
          "type": "string",
          "default": "",
          "description": "Base URL for the LLM provider."
        },
        "llmChat.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for the LLM provider."
        },
        "llmChat.model": {
          "type": "string",
          "default": "",
          "description": "Model to use for the LLM provider."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "openai": "^4.96.0"
  }
}